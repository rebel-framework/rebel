{
  "name": "root",
  "private": false,
  "workspaces": [
    "packages/core",
    "packages/env",
    "packages/stack",
    "packages/terminal",
    "packages/cli",
    "packages/router",
    "packages/database",
    "packages/errors",
    "packages/response"
  ],
  "scripts": {
    "cli": "node ./packages/cli/build/index.js",
    "build": "npm run build --workspaces",
    "coverage": "jest --coverage --passWithNoTests",
    "test": "jest --passWithNoTests",
    "format": "npm run format --workspaces",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces",
    "publish": "npm publish --workspaces --access public",
    "permission": "chmod +x packages/cli/build/index.js",
    "clear": "node scripts/clear.js",
    "update-version": "node scripts/update-version.js",
    "create-package": "node scripts/create-package.js",
    "watch": "node scripts/watch.js",
    "code-checks": "npm install && npm install --workspaces && npm run build && npm run format && npm run lint && npm run type-check && npm run coverage"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.10",
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-typescript": "^7.22.5",
    "@jest/globals": "^29.6.2",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "aws-cdk": "^2.92.0",
    "aws-cdk-lib": "^2.92.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.6.2",
    "prettier": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
